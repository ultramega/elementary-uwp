                Height="{x:Bind BlockSize, Mode=OneWay}" />
            <RowDefinition
                Height="{x:Bind BlockSize, Mode=OneWay}" />
            <RowDefinition
                Height="{x:Bind BlockSize, Mode=OneWay}" />
            <RowDefinition
                Height="{x:Bind SpacerWidth, Mode=OneWay}" />
            <RowDefinition
                Height="{x:Bind BlockSize, Mode=OneWay}" />
            <RowDefinition
                Height="{x:Bind BlockSize, Mode=OneWay}" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="{x:Bind HeaderWidth, Mode=OneWay}" />
            <ColumnDefinition
                Width="{x:Bind BlockSize, Mode=OneWay}" />
            <ColumnDefinition
                Width="{x:Bind BlockSize, Mode=OneWay}" />
            <ColumnDefinition
                Width="{x:Bind BlockSize, Mode=OneWay}" />
            <ColumnDefinition
                Width="{x:Bind BlockSize, Mode=OneWay}" />
            <ColumnDefinition
                Width="{x:Bind BlockSize, Mode=OneWay}" />
            <ColumnDefinition
                Width="{x:Bind BlockSize, Mode=OneWay}" />
            <ColumnDefinition
                Width="{x:Bind BlockSize, Mode=OneWay}" />
            <ColumnDefinition
                Width="{x:Bind BlockSize, Mode=OneWay}" />
            <ColumnDefinition
                Width="{x:Bind BlockSize, Mode=OneWay}" />
            <ColumnDefinition
                Width="{x:Bind BlockSize, Mode=OneWay}" />
            <ColumnDefinition
                Width="{x:Bind BlockSize, Mode=OneWay}" />
            <ColumnDefinition
                Width="{x:Bind BlockSize, Mode=OneWay}" />
            <ColumnDefinition
                Width="{x:Bind BlockSize, Mode=OneWay}" />
            <ColumnDefinition
                Width="{x:Bind BlockSize, Mode=OneWay}" />
            <ColumnDefinition
                Width="{x:Bind BlockSize, Mode=OneWay}" />
            <ColumnDefinition
                Width="{x:Bind BlockSize, Mode=OneWay}" />
            <ColumnDefinition
                Width="{x:Bind BlockSize, Mode=OneWay}" />
            <ColumnDefinition
                Width="{x:Bind BlockSize, Mode=OneWay}" />
        </Grid.ColumnDefinitions>

        <TextBlock
            x:Uid="Title/PeriodicTable"
            Grid.Row="1"
            Grid.ColumnSpan="19"
            FontSize="{x:Bind TitleFontSize, Mode=OneWay}"
            FontWeight="SemiBold" />

        <local:PeriodicTableLegendControl
            Grid.Row="1"
            Grid.Column="4"
            Grid.RowSpan="3"
            Grid.ColumnSpan="9"
            FontSize="{x:Bind LegendFontSize, Mode=OneWay}"
            Margin="{x:Bind LegendMargin, Mode=OneWay}" />

        <TextBlock
            Text="1"
            Grid.Row="1"
            FontSize="{x:Bind HeaderFontSize, Mode=OneWay}" />

        <TextBlock
            Text="2"
